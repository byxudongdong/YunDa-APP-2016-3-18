<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:id="@+id/ScrollView01"
     android:background="@drawable/bg1"
    >
<LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
     >
        <TextView
            android:id="@+id/ed_medit"
            android:layout_width="match_parent"
    		android:layout_height="wrap_content"
			android:text="韵达快递-系统设置[一大区] "
			android:background="@android:color/holo_orange_light"
            />
        
	<LinearLayout 
        	android:layout_width="match_parent"
    		android:layout_height="wrap_content"
    		android:orientation="horizontal"
    		android:layout_weight="2"
        	>
        <LinearLayout 
            android:layout_width="wrap_content"
    		android:layout_height="wrap_content"
    		android:layout_weight="1"
    		android:gravity="center_horizontal"
            >
            <Button 
        android:id="@+id/btn_mbutton2"
        android:layout_width="160dp"
    	android:layout_height="wrap_content"
    	android:layout_marginTop="10dp"
    	android:background="@drawable/login_button_selector"
    	android:text="自动键盘锁[1]"
        />
        </LinearLayout>
    <LinearLayout 
            android:layout_width="wrap_content"
    		android:layout_height="wrap_content"
    		android:layout_weight="1"
    		android:gravity="center_horizontal"
            >
    <Button 
        android:id="@+id/SynTimeButton"
      android:layout_width="160dp"
    	android:layout_height="wrap_content"
    	android:layout_marginTop="10dp"
    	android:background="@drawable/login_button_selector"
    	android:text="同步时间[2]"
        />
     </LinearLayout>
    </LinearLayout>
    	<LinearLayout 
        	android:layout_width="match_parent"
    		android:layout_height="wrap_content"
    		android:orientation="horizontal"
    		android:layout_weight="2"
        	>
        <LinearLayout 
            android:layout_width="wrap_content"
    		android:layout_height="wrap_content"
    		android:layout_weight="1"
    		android:gravity="center_horizontal"
            >
            <Button 
        android:id="@+id/mSoftware_upgrade"
         android:layout_width="160dp"
    	android:layout_height="wrap_content"
    	android:layout_marginTop="10dp"
    	android:background="@drawable/login_button_selector"
    	android:text="软件升级[3]"
        />
        </LinearLayout>
    <LinearLayout 
            android:layout_width="wrap_content"
    		android:layout_height="wrap_content"
    		android:layout_weight="1"
    		android:gravity="center_horizontal"
            >
    <Button 
        android:id="@+id/minstructionsButton"
     android:layout_width="160dp"
    	android:layout_height="wrap_content"
    	android:layout_marginTop="10dp"
    	android:background="@drawable/login_button_selector"
    	android:text="使用说明[4]"
        />
     </LinearLayout>
    </LinearLayout>
    	<LinearLayout 
        	android:layout_width="match_parent"
    		android:layout_height="wrap_content"
    		android:orientation="horizontal"
    		android:layout_weight="2"
        	>
        <LinearLayout 
            android:layout_width="wrap_content"
    		android:layout_height="wrap_content"
    		android:layout_weight="1"
    		android:gravity="center_horizontal"
            >
            <Button 
        android:id="@+id/mBluetooth_pairing"
       android:layout_width="160dp"
    	android:layout_height="wrap_content"
    	android:layout_marginTop="10dp"
    	android:background="@drawable/login_button_selector"
    	android:text="蓝牙配对[5]"
        />
        </LinearLayout>
    <LinearLayout 
            android:layout_width="wrap_content"
    		android:layout_height="wrap_content"
    		android:layout_weight="1"
    		android:gravity="center_horizontal"
            >
    <Button 
        android:id="@+id/mSoundsettingButton"
         android:layout_width="160dp"
    	android:layout_height="wrap_content"
    	android:layout_marginTop="10dp"
    	android:background="@drawable/login_button_selector"
    	android:text="声音设置[6]"
        />
     </LinearLayout>
    </LinearLayout>
    	<LinearLayout 
        	android:layout_width="match_parent"
    		android:layout_height="wrap_content"
    		android:orientation="horizontal"
    		android:layout_weight="2"
        	>
        <LinearLayout 
            android:layout_width="wrap_content"
    		android:layout_height="wrap_content"
    		android:layout_weight="1"
    		android:gravity="center_horizontal"
            >
        </LinearLayout>
    <LinearLayout 
            android:layout_width="wrap_content"
    		android:layout_height="wrap_content"
    		android:layout_weight="1"
    		android:gravity="center_horizontal"
            >
    
     </LinearLayout>
    </LinearLayout>
    	<LinearLayout 
        	android:layout_width="match_parent"
    		android:layout_height="wrap_content"
    		android:orientation="horizontal"
    		android:layout_weight="2"
        	>
        <LinearLayout 
            android:layout_width="wrap_content"
    		android:layout_height="wrap_content"
    		android:layout_weight="1"
    		android:gravity="center_horizontal"
            >
            <Button 
        android:id="@+id/wifiButton"
       android:layout_width="160dp"
    	android:layout_height="wrap_content"
    	android:layout_marginTop="10dp"
    	android:background="@drawable/login_button_selector"
    	android:text="无线网络设置[9]"
        />
        </LinearLayout>
    <LinearLayout 
            android:layout_width="wrap_content"
    		android:layout_height="wrap_content"
    		android:layout_weight="1"
    		android:gravity="center_horizontal"
            >
    <Button 
        android:id="@+id/backlightButton"
       android:layout_width="160dp"
    	android:layout_height="wrap_content"
    	android:layout_marginTop="10dp"
    	android:background="@drawable/login_button_selector"
    	android:text="背光设置[0]"
        />
     </LinearLayout>
    </LinearLayout>
    	<LinearLayout 
        	android:layout_width="match_parent"
    		android:layout_height="wrap_content"
    		android:orientation="horizontal"
    		android:layout_weight="2"
        	>
        <LinearLayout 
            android:layout_width="wrap_content"
    		android:layout_height="wrap_content"
    		android:layout_weight="1"
    		android:gravity="center_horizontal"
            >
        </LinearLayout>
    <LinearLayout 
            android:layout_width="wrap_content"
    		android:layout_height="wrap_content"
    		android:layout_weight="1"
    		android:gravity="center_horizontal"
            >
     </LinearLayout>
    </LinearLayout>
    	<LinearLayout 
        	android:layout_width="match_parent"
    		android:layout_height="wrap_content"
    		android:orientation="horizontal"
    		android:layout_weight="2"
        	>
        <RelativeLayout 
            android:layout_width="wrap_content"
    		android:layout_height="wrap_content"
    		android:layout_weight="1"
    		android:gravity="center_horizontal"
            >
            <Button 
        android:id="@+id/btn_mbutton13"
         android:layout_width="160dp"
    	android:layout_height="wrap_content"
    	android:layout_marginTop="10dp"
    	android:background="@drawable/login_button_selector"
    	android:text="校验超时设置"
        />
        </RelativeLayout>
    <LinearLayout 
            android:layout_width="wrap_content"
    		android:layout_height="wrap_content"
    		android:layout_weight="1"
    		android:gravity="center_horizontal"
            >
    <Button 
        android:id="@+id/cleanButton"
      android:layout_width="160dp"
    	android:layout_height="wrap_content"
    	android:layout_marginTop="10dp"
    	android:background="@drawable/login_button_selector"
    	android:text="清除历史记录"
        />
     </LinearLayout>
    </LinearLayout>
    	<LinearLayout 
        	android:layout_width="match_parent"
    		android:layout_height="wrap_content"
    		android:orientation="horizontal"
    		android:layout_weight="2"
        	>
       <LinearLayout 
           	android:layout_width="wrap_content"
    		android:layout_height="wrap_content"
    		android:layout_weight="1"
    		android:gravity="center_horizontal"
    		>
    		<Button
			    android:id="@+id/unloadButton"
			  android:layout_width="160dp"
			    android:layout_height="wrap_content"
			    android:layout_marginTop="10dp"
			    android:background="@drawable/login_button_selector"
			    android:text="立即上传[8]" />
       </LinearLayout>
		<LinearLayout 
		    android:layout_width="wrap_content"
    		android:layout_height="wrap_content"
    		android:layout_weight="1"
    		android:gravity="center_horizontal"
		    >
		    <Button 
       	 	android:id="@+id/w16Button"
        	 android:layout_width="160dp"
    		android:layout_height="wrap_content"
    		android:layout_marginTop="10dp"
    		android:background="@drawable/login_button_selector"
    		android:text="指环连接"
        	/>
		</LinearLayout>   
    </LinearLayout>
    	<LinearLayout 
        	android:layout_width="match_parent"
    		android:layout_height="wrap_content"
    		android:orientation="horizontal"
    		android:layout_weight="2"
        	>
        <LinearLayout 
            android:layout_width="wrap_content"
    		android:layout_height="wrap_content"
    		android:layout_weight="1"
    		android:gravity="center_horizontal"
            >
            <Button 
        android:id="@+id/btn_mbutton16"
        android:layout_width="200dp"
    	android:layout_height="wrap_content"
    	android:layout_marginTop="10dp"
    	android:background="@drawable/login_button_selector"
    	android:text="返回主菜单"
        />
        </LinearLayout>
    
    </LinearLayout>
</LinearLayout>
</ScrollView>